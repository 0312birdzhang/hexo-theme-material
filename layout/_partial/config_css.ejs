<% if(theme.background.bgimg == undefined){ %>
    <style>
        body{
            background-color: <%= theme.background.purecolor %>
        }
        #scheme-Nexus .material-layout .something-else .mdl-card__supporting-text{
            background-color: #fff;
        }
        #scheme-Nexus .MD-burger-layer {
            background-color: #666;
        }
        #scheme-Nexus .material-back{
            color: #666;
        }
        #scheme-Nexus .material-layout .material-post>.material-nav,
		#scheme-Nexus .material-layout .material-index>.material-nav,
        #scheme-Nexus .material-nav a,
        #scheme-Nexus .material-post_container .material-back{
            color: #666;
        }
    </style>
<% } else{ %>
    <style>
        body{
            background-image: url(<%= theme.background.bgimg %>);
        }
    </style>
<% } %>

<!-- Fade Effect -->
<% if(theme.uiux.fade_effect == true){ %>
    <style>
        #scheme-Nexus .fade {
            transition: all <%= theme.uiux.nprogress_buffer %>ms linear;
            -webkit-transform: translate3d(0,0,0);
            -moz-transform: translate3d(0,0,0);
            -ms-transform: translate3d(0,0,0);
            -o-transform: translate3d(0,0,0);
            transform: translate3d(0,0,0);
            opacity: 1;
        }

        #scheme-Nexus .fade.out{
            opacity: 0;
        }
    </style>
<% } %>

<style>
    a{
        color: <%= theme.uiux.hyperlink_color %>
    }
    
    #scheme-Nexus .mdl-card__media,
    #scheme-Nexus #search-label,
    #scheme-Nexus #search-form-label:after,
    #scheme-Nexus .hot_tags-count,
    #scheme-Nexus .sidebar_archives-count,
    #scheme-Nexus .sidebar-colored .sidebar-header,
    #scheme-Nexus .sidebar-colored .sidebar-badge{
        background-color: <%= theme.uiux.theme_color %> !important
    }
    
    #scheme-Nexus .sidebar-colored .sidebar-nav>.dropdown>.dropdown-menu>li>a:focus{
        color: <%= theme.uiux.theme_sub_color %> !important
    }
    
    #scheme-Nexus #post_entry-right-info,
    .sidebar-colored .sidebar-nav li:hover > a,
    .sidebar-colored .sidebar-nav li:hover > a i,
    .sidebar-colored .sidebar-nav li > a:hover,
    .sidebar-colored .sidebar-nav li > a:hover i,
    .sidebar-colored .sidebar-nav li > a:focus i,
    .sidebar-colored .sidebar-nav > .open > a,
    .sidebar-colored .sidebar-nav > .open > a:hover,
    .sidebar-colored .sidebar-nav > .open > a:focus,
    #ds-reset #ds-ctx .ds-ctx-entry .ds-ctx-head a{
        color: <%= theme.uiux.theme_color %> !important
    }
    
    #scheme-Nexus .fab{
        background: <%= theme.uiux.theme_sub_color %> !important
    }
</style>