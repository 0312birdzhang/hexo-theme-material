<ul class="nav sidebar-nav">
    <!-- User dropdown  -->
    <li class="dropdown">
        <ul id="settings-dropdown" class="dropdown-menu">
            <li>
                <a href="#" tabindex="-1">
                    <i class="material-icons sidebar-material-icons sidebar-indent-left1pc-element">account_circle</i>
                     <%= __("sidebar.profile") %>
                </a>
            </li>
            <li>
                <a href="#" tabindex="-1">
                    <i class="material-icons sidebar-material-icons sidebar-indent-left1pc-element">settings</i>
                     <%= __("sidebar.setting") %>
                </a>
            </li>
        </ul>
    </li>

    <!-- Homepage -->
    <li id="sidebar-first-li">
        <a href="<%= config.root %>" target="_self">
            <i class="material-icons sidebar-material-icons">home</i>
             <%= __("sidebar.homepage") %>
        </a>
    </li>

    <!-- I'm Feeling Lucky -->
<!--
    <li class="dropdown">
        <a href="" target="_self">
            <i class="material-icons sidebar-material-icons">explore</i>
             <%= __("sidebar.imlucky") %>
        </a>
    </li>
-->

    <!-- Pages  -->
    <li class="dropdown">
        <a class="ripple-effect dropdown-toggle" href="#" data-toggle="dropdown">
			<i class="material-icons sidebar-material-icons">view_carousel</i>
             <%= __("sidebar.pages") %>
            <b class="caret"></b>
        </a>
        <ul class="dropdown-menu">
            <% if(theme.url.about == undefined){ %>
            <% } else { %>
                <li>
                    <a href="<%= theme.url.about %>" target="_blank" title="<%= __("misc.about") %>">
                        <%= __("misc.about") %>
                    </a>
                </li>
            <% } %>
            <% for (var i in theme.pages){ %>
                <li>
                    <a href="<%= theme.pages[i] %>" target="_blank" title="<%= i %>">
                        <%= i %>
                    </a>
                </li>
            <% } %>
        </ul>
    </li>
	
    <!-- Archives  -->
    <li class="dropdown">
        <a href="#" class="ripple-effect dropdown-toggle" data-toggle="dropdown">
            <i class="material-icons sidebar-material-icons">inbox</i>
             <%= __("sidebar.archive") %>
            <b class="caret"></b>
        </a>
        <ul class="dropdown-menu">
            <li>
            <%- list_archives({
                show_count: true,
                amount: 5,
                class: 'sidebar_archives',
                style: 'none',
                separator: '</li><li>'
            }) %>
        </ul>
    </li>

    <!-- Divider -->
    <li class="divider"></li>



    <!-- Hot Tags  -->
    <li class="dropdown">
        <a class="ripple-effect dropdown-toggle" href="#" data-toggle="dropdown">
             <%= __("sidebar.tags") %>
            <b class="caret"></b>
        </a>
        <ul class="dropdown-menu">
            <li>
            <%- list_tags({
                orderby: 'count',
                show_count: true,
                amount: 10,
                class: 'hot_tags',
                style: 'none',
                separator: '</li><li>'
            }) %>
        </ul>
    </li>

    <!-- Links -->
    <li class="dropdown">
        <a class="ripple-effect dropdown-toggle" href="#" data-toggle="dropdown">
            <%= __("sidebar.links") %>
            <b class="caret"></b>
        </a>
        <ul class="dropdown-menu">
            <% if (site.data.links){ %>
                <% for (var i in site.data.links){ %>
                    <li>
                        <a href="<%= site.data.links[i].link %>" target="_blank" title="<%= i %>">
                            <%= i %>
                        </a>
                    </li>
                <% } %>
            <% } %>
        </ul>
    </li>

    <!-- Article Numebr  -->
    <li>
        <a href="#">
             <%= __("sidebar.article_num") %>
             <span class="sidebar-badge"><%= site.posts.length  %></span>
        </a>
    </li>
</ul>